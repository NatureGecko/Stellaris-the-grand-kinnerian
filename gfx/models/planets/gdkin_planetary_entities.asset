#####    Planet attachments    ######
@astroid_scale = 30


#####    Planets    ######


entity = {
	name = "pc_gdkin_hellish_world_01_entity"
	pdxmesh = "planet_non_clouded_mesh"
	default_state = "idle"
	
	#planet surface texture override
	meshsettings = {
		name = "planet_geosphereShape"
		texture_diffuse = "gdkin_hellish_01_diffuse.dds"
		texture_normal = "gdkin_hellish_01_normals.dds"
		texture_specular = "gdkin_hellish_01_specular.dds"
	}
		
		
	##cloud texture override
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "toxic_clouds_purple_diffuse.dds"
		texture_normal = "clouds_thin_normal.dds"
		texture_specular = "toxic_clouds_normal.dds"
	}
		
	##cloud shadow texture override
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "clouds_thin_shadow_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}

	state = { name = "idle" animation = "idle" time_offset = { 0 100 } 
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}

}

